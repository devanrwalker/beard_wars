<div class="devise-regs">
    <h2>Sign up</h2>

    <div class="row">

      <div class="col-md-3">
      </div>

      <div class="col-md-3">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
          </div>

          <div class="field">
            <% if @minimum_password_length %>
            <em><% @minimum_password_length %></em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password (Minimun of 6 characters)" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password" %>
          </div>
        </div>

      <div class="col-md-3">

        <div class="field">
          <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Name" %>
        </div>

        <div class="field">
          <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "User Name" %>
        </div>

        <div class="row">

          <div class="actions buttons-spacing">
            <%= f.submit "Sign up", class: 'btn btn-large btn-outline-primary center-row' %>
          </div>
        <% end %>

        <div class="btn btn-large btn-outline-primary center-row buttons-spacing">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
